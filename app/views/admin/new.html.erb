<%= form_for(@mechanic) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%>
    <br />
    <%= f.label :email %>
    <%= f.email_field :email%>
    <br />
    <%= f.label :mechanic_name %>
    <%= f.text_field :mechanic_name%>
    <br />
    <%= f.label :password %>
    <%= f.password_field :password%>
    <br />
       <%= f.label :admin  %>
    <%= f.check_box :admin %>
    I agree to be an admin
    
<%= f.submit "Become an admin "%>
<% end %>