

<h3 class="gray">These are all of your Vehicle(s)</h3>

<%= link_to "Create a vehicle", new_vehicle_path %>


<div>
<table class="table">
 <thead class="white">
    <tr>
     <th scope="col"></th>
     <th scope="col">Name</th>
     <th scope="col">Make</th>
     <th scope="col">Model</th>
     <th scope="col">Year</th>
     <th scope="col">Mileage</th>
     <th scope="col">Wheel size</th>
     <th scope="col">Color</th>
    </tr>
 </thead>
<tbody class="white">

<tr>
<% current_user.vehicles.each do |v| %>
<th scope="col"></th>
<td><%=v.vehicle_name  %></td>
<td><%=v.make.capitalize %></td>
<td><%=link_to "#{v.model.capitalize}", vehicle_path(v) %></td>
<td><%= v.year %></td>
<td><%= v.mileage %></td>
<td><%=v.wheel_size %></td>
<td><%= v.color %></td>

</tr>
<% end %>
</tbody>
</table>
</div>

<h2><%= link_to "What issues have your vehicles had?", vehicle_issues_path %></h2>



