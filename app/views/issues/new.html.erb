<h1>Add an issue for your <%= @vehicle.vehicle_name %> Vehicle</h1>
<div class="col-4">
<div class="alert alert-success" role="alert">
<%= form_for @issue do |f|  %>
<%= f.hidden_field :vehicle_id, :value => @vehicle.id %>

<%= f.label :date %>
<%= f.date_field :date%>

<%= f.label :category %>
<%= f.text_field :category%>

<%= f.label :name_of_issue %>
<%= f.text_area :name_of_issue %>



<%= f.submit "Create your issue" %>
<% end %>
</div>
</div>

<h2><%= link_to "Your Vehicles Home", vehicles_path %></h2>